@{
    ViewBag.Title = "GetTweets";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br /><br />
@using TweetSharp;

<div class="list-group">
    <a href="#" class="list-group-item active">
        @Html.Raw("@")@ViewBag.Username@Html.Raw("'s most recent tweets")
    </a>

    @if (ViewBag.Tweets != null)
    {
        IEnumerable<TwitterStatus> tweets = ViewBag.Tweets as IEnumerable<TwitterStatus>;
        foreach (var tweet in tweets)
        {
            <a href="#" class="list-group-item col-lg-12">@tweet.Text</a>

        }
    }

</div>